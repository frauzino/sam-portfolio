<div class="navbar">
  <%# Desktop Nav %>
  <div class="navbar-inner">
    <%= link_to "Samantha Bitonti", root_path, class: "brand" %>
    <ul class="nav-links">
      <li class="nav-link"><%= link_to "About", about_path %></li>
      <li class="nav-link"><%= link_to "Media", projects_path %></li>
      <li class="nav-link"><%= link_to "Gallery", photos_path %></li>
      <li class="nav-link"><%= link_to "Projects", events_path %></li>
      <li class="nav-link"><%= link_to "Contact", new_contact_form_path %></li>
      <% if user_signed_in? %>
        <li class="nav-link"><%= link_to "Log Out", destroy_user_session_path, data: {turbo_method: :delete}  %></li>
      <% end %>
    </ul>
  </div>

  <%# Mobile Nav %>
  <div class="mobile-navbar-inner" data-controller="navbar">
    <%= link_to "Samantha Bitonti", root_path, class: "mobile-brand" %>
    <button class="hamburger-menu" id="hamburger-menu" aria-label="Toggle navigation" data-action="click->navbar#toggleMenu">
      <svg class="hamburger-icon" width="140" height="116" viewBox="0 0 140 116" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M5 5H135" stroke-width="10" stroke-linecap="round"/>
        <path d="M5 58H135" stroke-width="10" stroke-linecap="round"/>
        <path d="M5 111H135" stroke-width="10" stroke-linecap="round"/>
      </svg>
    </button>
    <div class="mobile-menu" id="mobile-menu" data-navbar-target="menu">
      <ul class="mobile-nav-links">
        <li class="mobile-nav-link"><%= link_to "About", about_path %></li>
        <li class="mobile-nav-link"><%= link_to "Media", projects_path %></li>
        <li class="mobile-nav-link"><%= link_to "Gallery", photos_path %></li>
        <li class="mobile-nav-link"><%= link_to "Projects", events_path %></li>
        <li class="mobile-nav-link"><%= link_to "Contact", new_contact_form_path %></li>
        <% if user_signed_in? %>
          <li class="mobile-nav-link"><%= link_to "Log Out", destroy_user_session_path, data: {turbo_method: :delete} %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>


