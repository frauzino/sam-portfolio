<%= form_with(model: project) do |form| %>
  <% if project.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
        <% project.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :project_type, style: "display: block" %>
    <%= form.select :project_type, options: ["Voice", "Commercial", "Film", "Clown"] %>
  </div>

  <div>
    <%= form.label "Preview Image" %>
    <%= form.file_field :image %>
  </div>

  <div>
    <%= form.label "Youtube Link" %>
    <%= form.text_field :link %>
  </div>

  <div>
    <%= form.label "Audio Recording" %>
    <%= form.file_field :audio_file %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
