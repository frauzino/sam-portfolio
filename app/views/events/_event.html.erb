<div id="<%= dom_id event %>" class="event">

  <% if event.image.attached? %>
    <%= cl_image_tag event.image.key, class: "event-image" %>
  <% else %>
    <%= image_tag "event_default.jpg", class: "event-image" %>
  <% end %>

  <h3 class="event-title">
    <%= event.title %>
  </h3>

  <div class="event-info">
    <p>
      <%= event.date %>
    </p>
    <%= link_to "Learn More", event.link, target: "_blank" %>
  </div>

  <% if user_signed_in? %>
    <div class="event-edit-options">
      <%= link_to "Edit this event", edit_event_path(event), data: { turbo_frame: "_top" } %>
      <%= button_to "Delete this event", event, method: :delete %>
    </div>
  <% end %>

</div>
