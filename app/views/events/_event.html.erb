<div id="<%= dom_id event %>" class="event">

  <% if event.image.attached? %>
    <%= image_tag event.image, class: "event-image" %>
  <% else %>
    <%= image_tag "event_default.jpg", class: "event-image" %>
  <% end %>

  <h3 class="event-title">
    <%= event.title %>
  </h3>

  <div class="event-info">
    <p>
      <%= event.date %>
    </p>
    <%= link_to "Learn More", event.link %>
  </div>

</div>
